<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/bg</item>
        <item name="android:paddingHorizontal">@dimen/dp_16</item>
        <item name="android:paddingBottom">@dimen/dp_20</item>
    </style>

    <style name="MainText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp_7</item>
        <item name="iconTint">@color/text</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="SettingsHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="SettingsItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActivityLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TrackName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/icon_settings</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>


    <style name="playerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/textblacktowhite</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="playerAuthorName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/textblacktowhite</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="labelStyle">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/labelcolor</item>
    </style>

    <style name="labelValue">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/textblacktowhite</item>
    </style>

    <style name="newPlaylistBtn">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/whitetoblack</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/textblacktowhite</item>
    </style>

    <style name="ErrorText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>


    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/textblacktowhite</item>
    </style>

    <style name="BottomNavText">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BottomNavTextActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nav_clr</item>
    </style>
</resources>